meta {
  name: 02-Login Email
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/auth/login/email
  body: json
  auth: none
}

body:json {
  {
    "email": "{{email}}",
    "password": "{{password}}"
  }
}

script:post-response {
  if (res.status === 200 && res.body.data && res.body.data.token) {
    bru.setEnvVar("token", res.body.data.token.token);
  }
}