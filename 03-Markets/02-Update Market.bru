      "slogan": "Nouveau slogan",
      "address": "Marcory, Abidjan",
      "email": "nouveau@email.ci",
      "defaultHexColor": "#ff5733",
      "country": {
        "id": "clx1234567890",
        "code": "CI",
        "name": "Côte d'Ivoire",
